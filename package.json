{
  "name": "trash-notification",
  "version": "0.0.2",
  "description": "ゴミ出しに役立つ、ダメ人間のダメ人間によるダメ人間のためのアプリ",
  "main": "./out/main/index.js",
  "type": "module",
  "author": "butaosuinu",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint src && eslint src",
    "lint:ox": "oxlint src",
    "lint:eslint": "eslint src",
    "lint:fix": "oxlint src --fix && eslint src --fix",
    "format": "oxfmt src --write --ignore-path .oxfmtignore && prettier --write 'src/**/*.css'",
    "format:check": "oxfmt src --check --ignore-path .oxfmtignore && prettier --check 'src/**/*.css'",
    "check": "pnpm run format:check && pnpm run lint && pnpm run test:run",
    "typecheck": "tsc --noEmit",
    "dist": "pnpm run build && electron-builder",
    "dist:mac": "pnpm run build && electron-builder --mac",
    "dist:win": "pnpm run build && electron-builder --win"
  },
  "dependencies": {
    "@fontsource-variable/m-plus-1": "^5.2.9",
    "@fontsource-variable/outfit": "^5.2.8",
    "@google/genai": "^1.0.0",
    "date-fns": "^4.1.0",
    "electron-log": "^5.4.3",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.8.3",
    "jotai": "^2.12.0",
    "lucide-react": "^0.575.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "protobufjs"
    ]
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "electron": "^35.0.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^3.1.0",
    "eslint": "^9.27.0",
    "eslint-config-love": "^140.0.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-oxlint": "^1.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.16.0",
    "happy-dom": "^17.4.0",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.37.0",
    "prettier": "^3.5.0",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.0",
    "vitest": "^3.1.0"
  }
}
